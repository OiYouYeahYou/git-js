{
    "env": {
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            3
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-console": "off",
        "no-unused-vars":[
            "error",
            { "args": "none" }
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "Promise": true
    }
}
